<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".items">

    <ImageView
        android:id="@+id/img_store_highlight"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/tv_store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_store_highlight" />

    <Button
        android:id="@+id/btn_store_info"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:backgroundTint="#FFFFFF"
        android:text="Button"
        android:textAlignment="viewStart"
        android:textColor="#8F000000"
        android:textColorHighlight="#1E000000"
        android:textColorLink="#272222"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_store_name" />

    <ListView
        android:id="@+id/lv_menu"
        android:layout_width="0dp"
        android:layout_height="510dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_store_info" />

</androidx.constraintlayout.widget.ConstraintLayout>